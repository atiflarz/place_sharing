<div class = 'custom_row'>
  <div class = 'custom_column'>
    <div class = 'custom_padding'>
      <h3>Move the marker to share your location</h3>
      <%= render 'form', place: @place %>
    </div>
  </div>
  <div class = 'custom_column'>
    <div class = 'custom_padding'>
      <h3>Users List</h3>
      <div class="table-responsive">
        <table class="table table-striped">
          <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>User Locations</th>
          </tr>

          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.user_name %></td>
              <td><%= user.email %></td>
              <td><%= link_to "Location", users_path(id: user.user_name)%></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
